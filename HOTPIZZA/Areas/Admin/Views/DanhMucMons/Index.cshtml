@model IEnumerable<HOTPIZZA.Models.DanhMucMon>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Danh mục món</h2>

<p>
    @Html.ActionLink("Tạo thêm danh mục", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.TenDanhMuc)
        </th>
        
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.TenDanhMuc)
        </td>
        
        <td>
            @Html.ActionLink("Điều chỉnh", "Edit", new { id=item.IdDanhMuc }) |
           
            @Html.ActionLink("Xóa", "Delete", new { id=item.IdDanhMuc })
        </td>
    </tr>
}

</table>
