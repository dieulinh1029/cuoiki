@model IEnumerable<HOTPIZZA.Models.DonDatHang>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutHome.cshtml";
}
<h2>Danh sách đơn hàng</h2>


<table class="table">
    <tr>
        <th>
            Họ tên
        </th>
        <th>
            Ngày đặt
        </th>
        <th>
            Tình trạng đơn hàng
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NguoiDung.HovaTen)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NgayDat)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TinhTrangDonHang1.tenTTDH)
            </td>
            <td>
                <button class="btn-primary">
                    @Html.ActionLink("Chi tiết", "Details", new { id = item.MaDon }, new { @style = "color:white;" })
                </button>

            </td>
        </tr>
    }

</table>


