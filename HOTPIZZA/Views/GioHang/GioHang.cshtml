@using HOTPIZZA.Models;
@model List<Giohang>

@{
    ViewBag.Title = "GioHang";
    Layout = "~/Views/Shared/_LayoutHome.cshtml";
}

<div class="cart-container">
    <h1>Giỏ Hàng</h1>
    <table class="cart-table">
        <thead>
            <tr>
                <th>Sản phẩm</th>
                <th>Số lượng</th>
                <th>Đơn giá</th>
                <th>Thành tiền</th>
                <th>Hành động</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        <div class="product-info">
                            <img src="@Url.Content("~/images/Menu/" + item.HinhMinhHoa)" alt="" class="product-image" />
                            <span class="product-name">@item.HinhMinhHoa</span>
                        </div>
                    </td>
                    <td>
                        @using (Html.BeginForm("CapNhatGioHang", "GioHang", new { maMon = item.IdMon }))
                        {
                            <input type="number" value="@item.SoLuong" class="quantity-input" min="1" />
                        }</td>
                    <td>@String.Format("{0:#,##0} VNĐ", item.DonGia)</td>
                    <td>@String.Format("{0:#,##0} VNĐ", item.ThanhTien)</td>
                    <td>
                        <button class="btn btn-remove">Xóa</button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <div class="cart-footer">
        <span class="total-label">Tổng cộng:</span>
        <span class="total-price">
            @String.Format("{0:#,##0} VNĐ", Model.Sum(item => item.DonGia * item.SoLuong))
        </span>
        <button class="btn btn-checkout">Thanh toán</button>
    </div>

</div>


