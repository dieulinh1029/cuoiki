@model HOTPIZZA.Models.NguoiDung
@{
    ViewBag.Title = "DangNhap";
    Layout = "~/Views/Shared/_LayoutHome.cshtml";
}
<style>
    /* Thiết lập chung cho phần chính */
    #main-container {
        padding: 10px 0;
        background-color: #f9f9f9; /* Màu nền nhẹ nhàng */
    }

    /* Container của toàn bộ nội dung */
    .container {
        max-width: 960px;
        margin: 0 auto;
    }

    /* Tiêu đề trang */
    .wrapbox-heading-account {
        margin-bottom: 20px;
    }

    .header-page {
        text-align: center; /* Canh giữa tiêu đề */
        padding: 10px 0;
        border-bottom: 2px solid #28a745; /* Đường kẻ màu xanh lá */
        margin-bottom: 20px;
    }

        .header-page h1 {
            font-size: 23px;
            color: #333;
            text-transform: uppercase; /* Chữ in hoa */
            font-family: 'Times New Roman', Times, serif;
            font-weight: bold;
            margin: 0;
        }

    /* Dành cho cột trên thiết bị nhỏ */
    .col-xs-12 {
        padding: 10px;
    }
    /* Thiết lập form container */
    .login-form-container {
        max-width: 400px;
        margin: 40px auto;
        padding: 20px;
        border: 1px solid #ddd;
        border-radius: 8px;
        background-color: #fff;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

    /* Tiêu đề lỗi và thông báo */
    .text-danger {
        color: #dc3545;
        font-size: 0.875rem;
        margin-top: 5px;
    }

    /* Các nhóm form */
    .form-box__single-group {
        margin-bottom: 20px;
    }

    .form-label {
        display: block;
        font-weight: bold;
        color: #333;
        margin-bottom: 5px;
    }

    /* Input và các trường nhập liệu */
    .form-control {
        width: 100%;
        padding: 10px;
        font-size: 1rem;
        border: 1px solid #ddd;
        border-radius: 4px;
        transition: border-color 0.3s ease;
    }

        .form-control:focus {
            border-color: #28a745;
            box-shadow: 0 0 5px rgba(40, 167, 69, 0.2);
            outline: none;
        }

    /* Nút đăng nhập */
    .btn {
        display: inline-block;
        background-color: #000;
        color: #fff;
        padding: 10px 20px;
        font-size: 1rem;
        text-transform: uppercase;
        border: none;
        border-radius: 4px;
        cursor: pointer;
        transition: background-color 0.3s ease;
    }

        .btn:hover {
            background-color: #28a745;
        }

    /* Checkbox và liên kết */
    .d-flex.align-items-center {
        display: flex;
        align-items: center;
        justify-content: space-between;
        margin-bottom: 15px;
    }

    .link--gray {
        color: #6c757d;
        font-size: 0.875rem;
        text-decoration: none;
    }

        .link--gray:hover {
            color: #28a745;
        }

    .split-container {
        display: inline-block;
        width: 100%;
        height: 120vh;
        border-radius: 10px;
        overflow: hidden;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
        justify-content: center;
        align-items: center;
        /*        margin: 50px auto;*/
    }
</style>
@using (Html.BeginForm("DangNhap", "User", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    <div class="split-container">
        @*<div class="col-md-6 col-xs-12 wrapbox-heading-account">
                <div class="header-page clearfix">
                    <h1>Đăng nhập</h1>
                </div>
            </div>*@



        <div class="col-md-6 col-xs-12 login-form-container">
            <div class="login-register-form">
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="text-danger">@ViewBag.Message</div>
                <h4 style="color:#961b1e">Chào mừng đến với HOTPIZZA</h4>

                    <div class="text-danger">@ViewBag.Message</div>
                    <form>
                        <div class="form-box__single-group">
                            <label for="form-register-username">Họ và tên</label>
                            @Html.EditorFor(model => model.HovaTen, new { htmlAttributes = new { @class = "form-control" }, @required = "required" })
                            @Html.ValidationMessageFor(model => model.HovaTen, "", new { @class = "text-danger" })
                        </div>
                        <div class="form-box__single-group">
                            <label for="form-register-birthdate">Ngày sinh</label>
                            @Html.TextBox("ngaysinh", null, new { type = "datetime-local", @required = "required" })

                            @Html.ValidationMessageFor(model => model.NgaySinh, "", new { @class = "text-danger" })
                        </div>
                        <div class="form-box__single-group">
                            <label for="form-uregister-sername-email">Địa chỉ Email</label>
                            @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" }, @required = "required" })
                            @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })

                        </div>
                        <div class="form-box__single-group">
                            <label for="form-uregister-sername-email">Số điện thoại</label>
                            @Html.EditorFor(model => model.Phone, new { htmlAttributes = new { @class = "form-control" }, @required = "required" })
                            @Html.ValidationMessageFor(model => model.Phone, "", new { @class = "text-danger" })

                        </div>
                        <div class="form-box__single-group">
                            <label for="form-uregister-sername-email">Tên đăng nhập</label>
                            @Html.EditorFor(model => model.TenDN, new { htmlAttributes = new { @class = "form-control" }, @required = "required" })
                            @Html.ValidationMessageFor(model => model.TenDN, "", new { @class = "text-danger" })

                        </div>
                        <div class="form-box__single-group">
                            <label for="form-register-username-password">Mật khẩu</label>
                            <div class="password__toggle">
                                @Html.EditorFor(model => model.MatKhau, new { htmlAttributes = new { @id = "form-register-username-password" }, @required = "required" })
                                @Html.ValidationMessageFor(model => model.MatKhau, "", new { @class = "text-danger" })

                            </div>
                        </div>


                        <button class="btn btn--box btn--medium btn--radius btn--black btn--black-hover-green btn--uppercase font--semi-bold" type="submit">REGISTER</button>
                    </form>
                </div>



                <br><br>
                <a class="link--gray" href="@Url.Action("DangNhap", "User")">Nếu bạn đã có tài khoản? Đăng nhập tại đây.</a>
            </div>
        </div>
   
}