@model HOTPIZZA.Models.NguoiDung
@{
    ViewBag.Title = "DangNhap";
    Layout = "~/Views/Shared/_LayoutHome.cshtml";
}

@using (Html.BeginForm("DangNhap", "User", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    <main id="main-container" class="main-container">
        <div class="container">
            <div class="row">
                <div class="col-md-6 col-xs-12 wrapbox-heading-account">
                    <div class="header-page clearfix">
                        <h1>Tạo tài khoản</h1>
                    </div>
                </div>
                <div class="col-md-6 col-xs-12">
                    <div class="section-content m-b-40">
                        <h5 class="section-content__title text-center">Login</h5>
                    </div>

                    <div class="col-lg-6 col-12">
                        <div class="login-form-container">
                            <div class="login-register-form">
                                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                <div class="text-danger">@ViewBag.Message</div>
                                <div class="form-box__single-group">
                                    @Html.LabelFor(model => model.TenDN, htmlAttributes: new { @class = "form-label" })
                                    @Html.EditorFor(model => model.TenDN, new { htmlAttributes = new { @class = "form-control", @id = "form-username" } })
                                    @Html.ValidationMessageFor(model => model.TenDN, "", new { @class = "text-danger" })
                                </div>
                                <div class="form-box__single-group">
                                    @Html.LabelFor(model => model.MatKhau, htmlAttributes: new { @class = "form-label" })
                                    <div class="password__toggle">
                                        @Html.EditorFor(model => model.MatKhau, new { htmlAttributes = new { @class = "form-control", @id = "form-username-password", type = "password" } })
                                        @Html.ValidationMessageFor(model => model.MatKhau, "", new { @class = "text-danger" })

                                    </div>
                                </div>
                                <div class="d-flex justify-content-between flex-wrap m-tb-20">
                                    <label for="account-remember">
                                        <input type="checkbox" name="account-remember" id="account-remember">
                                        <span>Remember me</span>
                                    </label>
                                    <a class="link--gray" href="#">Forgot Password?</a>
                                </div>
                                <button class="btn btn--box btn--medium btn--radius btn--black btn--black-hover-green btn--uppercase font--semi-bold" type="submit">LOGIN</button>
                            </div>

                            <br>
                            <a class="link--gray" href="@Url.Action("Signup","User")">If you do not have an account, Register here.</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </main>
}
