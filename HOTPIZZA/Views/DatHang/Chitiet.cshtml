@using HOTPIZZA.Models
@{
    ViewBag.Title = "Chitiet";
    Layout = "~/Views/Shared/_LayoutHome.cshtml";
}
<style>
   
    .product_details {
        padding: 20px;
        background-color: #fff;
        border-radius: 10px;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
    }

    .product_details_title h3 {
        margin-bottom: 10px;
    }

    .product_price p {
        color: red;
        font-size: 22px;
       font-family: 'Times New Roman', Times, serif;
    }

    .star_rating li {
        margin-right: 5px;
        font-size: 20px;
    }

    .star_rating i {
        transition: color 0.3s ease;
    }

        .star_rating i:hover {
            color: #ffb300;
            cursor: pointer;
        }

    .product_details .btn-danger {
        background-color: #d9534f;
        border: none;
        transition: background-color 0.3s ease;
    }

        .product_details .btn-danger:hover {
            background-color: #c9302c;
            cursor: pointer;
        }
</style>

<div class="row">
    <div class="col-lg-6">
        <div class="single_product_image_background">
            <img src="~/images/Menu/@Model.HinhMinhHoa" style="width: 100%; max-width: 450px; height: auto; margin: 30px auto; display: block; border-radius: 8px;" />
        </div>
    </div>
    <div class="col-lg-4" style="margin-top: 60px;">
        <div class="product_details">
            <!-- Tên món ăn -->
            <div class="product_details_title">
                <h3 style="font-weight: bold; color: lightskyblue; font-size: 24px;">@Model.TenMon</h3>
                <p style="font-size: 16px; color: #555;">@Model.MoTa</p>
            </div>



            <div class="product_price">
                <p style="color: red; font-size: 22px; margin-top: 20px;">
                  
                    
                    Đơn giá: @String.Format("{0:#,##0} VNĐ", @Model.DonGia)
                </p>
            </div>
            <ul class="star_rating" style=" color: #ffd800; display: flex">
                <li><i class="fa fa-star" aria-hidden="true"></i></li>
                <li><i class="fa fa-star" aria-hidden="true"></i></li>
                <li><i class="fa fa-star" aria-hidden="true"></i></li>
                <li><i class="fa fa-star" aria-hidden="true"></i></li>
                <li><i class="fa fa-star-o" aria-hidden="true"></i></li>
            </ul>
            <div style=" background:#e1e1e1; text-align:center">
                <span><img src="~/images/truck.png">Miễn phí giao hàng</span>
            </div>

            @*<a href="@Url.Action("ThemGioHang", "GioHang", new { maMon = @Model.IdMon})">Đặt Món</a>*@

        </div>
        @using (@Html.BeginForm("ThemGioHang", "GioHang", new { @IdMon = @Model.IdMon, @strURL = Request.Url.ToString() }))
        {
            <input type="submit" value="Mua hàng" class="btn btn-danger" style="font-weight: bold; padding: 10px 20px; border-radius: 5px; font-size: 16px; width: 100%; margin-top: 20px;" />
        }

    </div>
</div>


